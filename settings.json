{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/settings.schema.json",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(node:*)",
      "Bash(powershell:*)",
      "Bash(pwsh:*)",
      "Read(**/*)",
      "Write(.agentic/*)",
      "Edit(.agentic/*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "ultrawork|ulw|끝까지|완료해|finish everything|complete all",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/keyword-detector.ps1\" -Keyword ultrawork"
          }
        ]
      },
      {
        "matcher": "ultrathink|깊게생각|deeply|think hard|심층분석",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[THINK MODE ACTIVATED] Extended thinking enabled for complex reasoning'"
          }
        ]
      },
      {
        "matcher": "search|찾아|검색|find|where|어디|위치",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[SEARCH MODE] Use @explorer agent for comprehensive codebase search'"
          }
        ]
      },
      {
        "matcher": "analyze|분석|investigate|조사|살펴|review",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[ANALYZE MODE] Deep analysis with multiple perspectives'"
          }
        ]
      },
      {
        "matcher": "docs|문서|library|라이브러리|how to use|사용법|documentation",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[RESEARCH MODE] Use @librarian agent for documentation and library research'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/failure-tracker.ps1\""
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[TODO TRACKING] Progress updated - verify all items have clear completion criteria'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/ralph-loop.ps1\""
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/todo-enforcer.ps1\""
          }
        ]
      }
    ]
  }
}
