{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/schemas/settings.schema.json",
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(node:*)",
      "Bash(powershell:*)",
      "Bash(pwsh:*)",
      "Read(**/*)",
      "Write(.agentic/*)",
      "Edit(.agentic/*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/boulder-manager.ps1\" -Action load"
          }
        ]
      },
      {
        "matcher": "swarm:|parallel:|병렬:",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/keyword-detector.ps1\" -Keyword swarm"
          }
        ]
      },
      {
        "matcher": "ultrawork|ulw|finish everything|complete all",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/keyword-detector.ps1\" -Keyword ultrawork"
          }
        ]
      },
      {
        "matcher": "ultrathink|deeply|think hard",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[THINK MODE ACTIVATED] Extended thinking enabled for complex reasoning'"
          }
        ]
      },
      {
        "matcher": "search|find|where|locate",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[SEARCH MODE] Use built-in Explore agent for codebase search'"
          }
        ]
      },
      {
        "matcher": "analyze|investigate|review|examine",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[ANALYZE MODE] Deep analysis with multiple perspectives'"
          }
        ]
      },
      {
        "matcher": "docs|library|how to use|documentation|reference",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[RESEARCH MODE] Use @librarian agent for documentation and library research'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/failure-tracker.ps1\""
          }
        ]
      },
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[TODO TRACKING] Progress updated - verify all items have clear completion criteria'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/boulder-manager.ps1\" -Action save"
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/ralph-loop.ps1\""
          },
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"hooks/todo-enforcer.ps1\""
          }
        ]
      }
    ]
  }
}
